# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=1433
DB_NAME=egxpilot_dev
DB_USER=sa
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_make_it_very_long_and_secure
JWT_EXPIRES_IN=24h

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Logging
LOG_LEVEL=info

# API Keys (if needed)
YAHOO_API_KEY=optional
INVESTING_API_KEY=optional

# Rate Limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=15

# Cache TTL (seconds)
CACHE_REALTIME_TTL=60
CACHE_TECHNICAL_TTL=300
CACHE_HISTORICAL_TTL=86400

# Opportunity Hunter Configuration
OH_SCAN_INTERVAL=300000
OH_MIN_SCORE=0.65
OH_MAX_RESULTS=20
OH_MIN_VOLUME=100000

# Webhook URLs (for notifications)
DISCORD_WEBHOOK_URL=optional
SLACK_WEBHOOK_URL=optional

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Production Settings (override in production)
# NODE_ENV=production
# DB_HOST=your_production_db_host
# REDIS_HOST=your_production_redis_host
# LOG_LEVEL=warn

{
  "name": "egxpilot",
  "version": "1.0.0-beta.1",
  "description": "Smart Financial Advisor for the Egyptian Stock Market - Complete backend infrastructure with authentication, portfolio management, and technical analysis",
  "main": "backend/server.js",
  "scripts": {
    "start": "NODE_ENV=production node backend/server.js",
    "start:prod": "NODE_ENV=production node backend/server.js",
    "start:dev": "NODE_ENV=development node backend/server.js",
    "dev": "NODE_ENV=development nodemon backend/server.js",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:system": "NODE_ENV=test node tests/system-test.js",
    "test:production": "NODE_ENV=production node tests/production-test.js",
    "test:all": "npm run test && npm run test:production",
    "lint": "eslint backend/",
    "lint:fix": "eslint backend/ --fix",
    "lint:frontend": "cd frontend && npm run lint",
    "format": "prettier --write \"backend/**/*.js\"",
    "clean": "rm -rf node_modules coverage temp/*.log",
    "clean:logs": "rm -rf logs/*.log temp/*.log",
    "init-db": "node scripts/init-database.js",
    "init-db:prod": "NODE_ENV=production node scripts/init-database.js",
    "seed": "node database/seeds/run-seeds.js",
    "seed:prod": "NODE_ENV=production node database/seeds/run-seeds.js",
    "migrate": "node database/migrations/run-migrations.js",
    "migrate:prod": "NODE_ENV=production node database/migrations/run-migrations.js",
    "deploy": "npm run build:production && npm run start:prod",
    "health-check": "curl -f http://localhost:5000/health || exit 1",
    "backup-db": "node scripts/backup-database.js",
    "restore-db": "node scripts/restore-database.js",
    "quick-start": "./quick-start.sh",
    "monitor": "./scripts/health-check.sh",
    "backup": "./scripts/backup.sh",
    "deploy:full": "./scripts/deploy.sh",
    "logs": "tail -f logs/combined.log",
    "logs:error": "tail -f logs/error.log",
    "logs:access": "tail -f /var/log/nginx/access.log",
    "status": "systemctl status egxpilot nginx redis-server",
    "restart:app": "sudo systemctl restart egxpilot",
    "restart:nginx": "sudo systemctl restart nginx",
    "restart:redis": "sudo systemctl restart redis-server",
    "restart:all": "npm run restart:app && npm run restart:nginx && npm run restart:redis"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "mssql": "^10.0.1",
    "redis": "^4.6.10",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "technicalindicators": "^3.1.0",
    "ws": "^8.14.2",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@types/node": "^20.9.0"
  },
  "keywords": [
    "egyptian-stock-market",
    "egx",
    "technical-analysis",
    "trading",
    "financial-advisor",
    "wyckoff",
    "elliott-wave"
  ],
  "author": "EGXpilot Team",
  "license": "MIT"
}
